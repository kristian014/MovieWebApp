@page "/catalog/movies"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Movies)]

@inject IStringLocalizer<Movie> L

<FshTitle Title="@L["Movies"]" Description="@L["Manage Movies."]" />

<EntityTable @ref="_table" TEntity="MovieDto" TId="Guid" TRequest="MovieDto" Context="@Context">

    <AdvancedSearchContent>
        <GenreAutocomplete @bind-Value="SearchGenreId" />
        <MudSelect MultiSelection="true" @bind-Value="_value" @bind-SelectedValues="OrderByOptions" T="string" Label="@L["Order By"]" AdornmentIcon="@Icons.Material.Filled.Search" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem T="string" Value="@("Title")">@L["Title"]</MudSelectItem>
            <MudSelectItem T="string" Value="@("ReleaseDate")">@L["Release Date"] </MudSelectItem>
        </MudSelect>
     </AdvancedSearchContent>

    <EditFormContent>
    </EditFormContent>

</EntityTable>
